@using PortfolioTask1.Models.Entities
@model List<Projelerim>

@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <h1 class="page-title">Projelerim</h1>
        <p class="page-subtitle">Portfolyonuzdaki projeleri yönetin</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Proje Listesi</h2>
            <!-- Changed button to link to separate add page -->
            <a href="/Admin/ProjeEkle" class="btn btn-primary">Yeni Proje Ekle</a>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Proje Başlığı</th>
                        <th>Kategori</th>
                        <th>Proje Boyutu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model)
                    {
                        <tr>
                            <td>@x.ProjeBaslik</td>
                            <td>@x.ProjeSinifi</td>
                            <td>@x.ProjeBoyutu</td>
                            <td class="table-actions">
                                <!-- Changed button to link to separate edit page -->
                                <a href="/Admin/ProjeDuzenle/@x.ProjelerimId" class="btn btn-secondary btn-sm">Düzenle</a>
                                <a href="/Admin/ProjeSil/@x.ProjelerimId" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</main>
</div>

