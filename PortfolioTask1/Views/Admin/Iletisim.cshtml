@using PortfolioTask1.Models.Entities
@model List<IletisimForm>

@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <h1 class="page-title">İletişim Mesajları</h1>
        <p class="page-subtitle">Gelen mesajları görüntüleyin ve yönetin</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Mesaj Listesi</h2>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Mesaj</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model)
                    {
                        <tr>
                            <td>@x.Isim</td>
                            <td>@x.Mail</td>
                            <td>@x.Aciklama</td>
                            <td>@x.Tarih</td>
                            @if(x.Goruldu == false)
                            {
                                <td><span class="badge badge-warning">Okunmadı</span></td>
                            }
                            else
                            {
                                <td><span class="badge badge-success">Okundu</span></td>
                            }
                            <td class="table-actions">
                                @if(x.Goruldu == false)
                                {
                                    <a href="/Admin/IletisimMesajGoruldu/@x.IletisimFormId" class="btn btn-secondary btn-sm">Görüldü Olarak İşaretle</a>
                                }
                                else
                                {
                                    <a href="/Admin/IletisimMesajGoruldu/@x.IletisimFormId" class="btn btn-secondary btn-sm">Görüldü Olarak İşaretlemeyi Kaldır</a>
                                }
                                <a href="/Admin/IletisimMesajSil/@x.IletisimFormId" class="btn btn-secondary btn-sm" >Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</main>
</div>

