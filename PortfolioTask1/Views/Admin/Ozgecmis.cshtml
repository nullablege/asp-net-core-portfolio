@using PortfolioTask1.Models.Entities
@model List<Ozgecmis>

@{
    ViewData["Title"] = "Ozgecmis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <h1 class="page-title">Özgeçmiş</h1>
        <p class="page-subtitle">Eğitim ve iş deneyimlerinizi yönetin</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Özgeçmiş Kayıtları</h2>
            <!-- Changed button to link to separate add page -->
            <a href="/Admin/OzgecmisEkle" class="btn btn-primary">Yeni Ekle</a>
        </div>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Seviye</th>
                        <th>Kurum</th>
                        <th>Tarih</th>
                        <th>Tür</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model)
                    {
                        <tr>
                            <td>@x.Seviye </td>
                            <td>@x.Kurum</td>
                            <td>@x.Tarih</td>
                            @if(x.Tip == "egitim")
                            {
                                <td><span class="badge badge-success">Eğitim</span></td>
                            }
                            else
                            {
                                <td><span class="badge badge-warning">İş Deneyimi</span></td>
                            }
                            <td class="table-actions">
                                <!-- Changed button to link to separate edit page -->
                                <a href="/Admin/OzgecmisDuzenle/@x.OzgecmisId" class="btn btn-secondary btn-sm">Düzenle</a>
                                <a href="/Admin/OzgecmisSil/@x.OzgecmisId" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>
</div>>

