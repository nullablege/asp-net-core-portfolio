@using PortfolioTask1.Models.Entities
@model Projelerim
@{
    ViewData["Title"] = "ProjeDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Main Content -->
<main class="main-content">
    <div class="page-header">
        <h1 class="page-title">Projenizi Düzenleyin</h1>
        <p class="page-subtitle">Portfolyonuzdaki Projeyi Düzenleyin</p>
    </div>

    <div class="card">
        @using (Html.BeginForm("ProjeDuzenle", "Admin", FormMethod.Post))
        {
            <div class="form-group"> 
                <label class="form-label">Id</label>
                @Html.TextBoxFor(x => x.ProjelerimId, new { @class = "form-input", placeholder = "Proje adını girin", @readonly="readonly" })
            </div>

            <div class="form-group">
                <label class="form-label">Proje Başlığı</label>
                @Html.TextBoxFor(x => x.ProjeBaslik, new { @class = "form-input", placeholder = "Proje adını girin" })
            </div>

            <div class="form-group">
                <label class="form-label">Proje Türü</label>
                @Html.TextBoxFor(x => x.ProjeSinifi, new { @class = "form-input", placeholder = "Proje türünü girin" })
            </div>

            <div class="form-group">
                <label class="form-label">Proje Boyutu ( 1 ile 12 arasında sayfadaki kaplayacağı yer )</label>
                @Html.TextBoxFor(x => x.ProjeBoyutu, new { @class = "form-input", placeholder = "Proje boyutu girin ( 1 - 12 )" })
            </div>

            <div class="form-group">
                <label class="form-label">Proje Resmi </label>
                @Html.TextBoxFor(x => x.ProjeResim, new { @class = "form-input", placeholder = "Proje Reim URL Girin." })
            </div>

            <div class="form-actions">
                <a href="/Admin/Projeler" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-primary">Düzenle</button>
            </div>
        }
    </div>
</main>
</div>
